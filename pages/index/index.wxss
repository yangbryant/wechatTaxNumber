/**index.wxss**/
.container{
  background: #efefef;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.section{
  position: relative;
  height: 80rpx;
  margin: 5rpx 20rpx;
  padding: 0 0;
  background: transparent;
  z-index: 99;
}

.section input{
  border: 4rpx solid #54a848;
  border-radius: 10rpx;
  background: #ffffff;
  left: 10rpx;
  right: 10rpx;
  height: 76rpx;
  padding-left: 26rpx;
  font-size: 30rpx;
}

.hot-container{
  position: relative;
  background: #efefef;
  flex: 1;
  z-index: 0;
}

.hot-card{
  background: #ffffff;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  height: 140rpx;
  margin: 20rpx 20rpx;
  border-width : 10rpx;
	border-left-style : solid;
	border-left-color : #54a848;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.hot-card .tax-name-and-creditcode .tax-name{
  flex: 1;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  padding-left: 24rpx;
  color: #080808;
}
.hot-card .tax-name-and-creditcode .tax-creditcode{
  flex: 1;
  margin-top: 10rpx;
  font-size: 24rpx;
  padding-left: 24rpx;
  color: #808080;
}
.hot-container .tax-empty{
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.hot-container .tax-empty .tax-empty-text{
  flex: 1;
  font-size: 30rpx;
  color: #808080;
  text-align: center;
}